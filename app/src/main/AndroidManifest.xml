<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.goodsshop">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@mipmap/ic_launcher"/>
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorPrimary"/>
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="1"/>
        <activity
            android:name=".Splash"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Join"
            android:screenOrientation="portrait"/>
        <activity android:name=".FindPassword"
            android:screenOrientation="portrait"/>
        <activity android:name=".ClickGoods"
            android:screenOrientation="portrait"/>
        <activity android:name=".ChangeMyInfo"
            android:screenOrientation="portrait"/>
        <activity android:name=".ReviewDetail"
            android:screenOrientation="portrait"/>
        <activity android:name=".WriteReview"
            android:screenOrientation="portrait"/>
        <activity android:name=".AfterSearch"
            android:screenOrientation="portrait"/>
        <activity android:name=".SeeOtherShop"
            android:screenOrientation="portrait"/>
        <activity android:name=".Notification"
            android:screenOrientation="portrait"/>
        <activity android:name=".Jjim"
            android:screenOrientation="portrait"/>
        <activity android:name=".Sales"
            android:screenOrientation="portrait"/>
        <activity android:name=".Purchase"
            android:screenOrientation="portrait"/>
        <activity android:name=".SetProfile"
            android:screenOrientation="portrait"/>
        <activity android:name=".SetNotification"
            android:screenOrientation="portrait"/>
        <activity android:name=".ChattingRoom"
            android:screenOrientation="portrait"/>
        <activity android:name=".ClickGoodsDetail"
            android:screenOrientation="portrait"/>

        <service android:name=".FirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

