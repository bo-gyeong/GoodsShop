<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/regiCLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Registration">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="?attr/actionBarSize">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <LinearLayout
                    android:id="@+id/addGoodsImg"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/addGoodsImgIcon"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/change_color_click_transparent"
                        tools:ignore="MissingConstraints">

                        <ImageView
                            android:id="@+id/addImgView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingTop="10dp"
                            android:paddingBottom="35dp"
                            android:background="@drawable/round_square"
                            android:src="@drawable/ic_baseline_add_24" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent">

                            <TextView
                                android:id="@+id/picCountTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="65dp"
                                android:layout_marginEnd="2dp"
                                android:layout_marginRight="2dp"
                                android:text="@string/fRegistration_picCountTextView"
                                android:textStyle="bold"
                                android:textSize="17sp"
                                app:layout_constraintRight_toLeftOf="@+id/picNumTextView"/>

                            <TextView
                                android:id="@+id/picNumTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="65dp"
                                android:text="@string/fRegistration_picNumTextView"
                                android:textStyle="bold"
                                android:textSize="17sp"
                                app:layout_constraintRight_toRightOf="parent"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <HorizontalScrollView
                        android:id="@+id/addGoodsPicHorizontalScrollView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:layout_weight="1"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/addGoodsImg">

                        <LinearLayout
                            android:id="@+id/addGoodsPicLinearLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/getGalleryImgView1"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginRight="5dp"
                                android:visibility="gone"
                                android:background="@drawable/round_square" />

                            <ImageView
                                android:id="@+id/getGalleryImgView2"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginRight="5dp"
                                android:visibility="gone"
                                android:background="@drawable/round_square" />

                            <ImageView
                                android:id="@+id/getGalleryImgView3"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginRight="5dp"
                                android:visibility="gone"
                                android:background="@drawable/round_square" />

                            <ImageView
                                android:id="@+id/getGalleryImgView4"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginRight="5dp"
                                android:visibility="gone"
                                android:background="@drawable/round_square" />

                            <ImageView
                                android:id="@+id/getGalleryImgView5"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginRight="5dp"
                                android:visibility="gone"
                                android:background="@drawable/round_square" />

                            <ImageView
                                android:id="@+id/getGalleryImgView6"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginRight="5dp"
                                android:visibility="gone"
                                android:background="@drawable/round_square" />

                            <ImageView
                                android:id="@+id/getGalleryImgView7"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginRight="5dp"
                                android:visibility="gone"
                                android:background="@drawable/round_square" />

                            <ImageView
                                android:id="@+id/getGalleryImgView8"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginRight="5dp"
                                android:visibility="gone"
                                android:background="@drawable/round_square" />

                            <ImageView
                                android:id="@+id/getGalleryImgView9"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginRight="5dp"
                                android:visibility="gone"
                                android:background="@drawable/round_square" />

                            <ImageView
                                android:id="@+id/getGalleryImgView10"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginRight="5dp"
                                android:visibility="gone"
                                android:background="@drawable/round_square" />

                        </LinearLayout>

                    </HorizontalScrollView>
                </LinearLayout>

                <View
                    android:id="@+id/brView1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="#CFCFCF"
                    app:layout_constraintTop_toBottomOf="@+id/addGoodsImg"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/goodsNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:hint="@string/fRegistration_goodsNameEditText"
                    android:background="@android:color/transparent"
                    app:layout_constraintTop_toBottomOf="@id/brView1" />

                <View
                    android:id="@+id/brView2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="#CFCFCF"
                    app:layout_constraintTop_toBottomOf="@+id/goodsNameEditText"
                    tools:ignore="MissingConstraints" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/categorySelectConstraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@id/brView2"
                    tools:ignore="MissingConstraints">

                    <TextView
                        android:id="@+id/categoryTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/fRegistration_categoryTextView"
                        android:textColor="#000000"
                        android:textSize="17sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                        app:layout_constraintRight_toRightOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/brView3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="#CFCFCF"
                    app:layout_constraintTop_toBottomOf="@+id/categorySelectConstraintLayout"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/priceWonTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fRegistration_priceWonTextView"
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@id/brView3"
                    app:layout_constraintBottom_toTopOf="@id/brView4"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <EditText
                    android:id="@+id/priceEditText"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:hint="@string/fRegistration_priceEditText"
                    android:background="@android:color/transparent"
                    android:maxLength="8"
                    android:inputType="number"
                    app:layout_constraintTop_toBottomOf="@id/brView3"
                    app:layout_constraintLeft_toRightOf="@+id/priceWonTextView"
                    tools:ignore="MissingConstraints" />

                <View
                    android:id="@+id/brView4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="#CFCFCF"
                    app:layout_constraintTop_toBottomOf="@+id/priceEditText"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/deliveryTextView"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/filter_deliveryTextView"
                    app:layout_constraintTop_toBottomOf="@id/brView4"
                    tools:ignore="MissingConstraints" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/deliveryChkBoxConstraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    app:layout_constraintTop_toBottomOf="@id/deliveryTextView">

                    <CheckBox
                        android:id="@+id/postCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/filter_postBtn"
                        android:checked="true"
                        app:layout_constraintLeft_toLeftOf="parent"
                        tools:ignore="MissingConstraints" />

                    <CheckBox
                        android:id="@+id/parcelCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/filter_parcelBtn"
                        android:checked="true"
                        app:layout_constraintLeft_toRightOf="@id/postCheckBox"
                        app:layout_constraintRight_toLeftOf="@id/directDealingCheckBox"
                        tools:ignore="MissingConstraints" />

                    <CheckBox
                        android:id="@+id/directDealingCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/filter_directDealingBtn"
                        android:checked="true"
                        app:layout_constraintLeft_toRightOf="@+id/parcelCheckBox"
                        app:layout_constraintRight_toRightOf="parent"
                        tools:ignore="MissingConstraints" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/brView5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="#CFCFCF"
                    app:layout_constraintTop_toBottomOf="@+id/deliveryChkBoxConstraintLayout"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/conditionTextView"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/filter_conditionTextView"
                    app:layout_constraintTop_toBottomOf="@id/brView5"
                    tools:ignore="MissingConstraints" />

                <RadioGroup
                    android:id="@+id/conditionRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="3dp"
                    app:layout_constraintTop_toBottomOf="@id/conditionTextView"
                    tools:ignore="MissingConstraints">

                    <RadioButton
                        android:id="@+id/highRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/filter_highBtn"
                        android:layout_weight="1"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <RadioButton
                        android:id="@+id/midRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/filter_midBtn"
                        android:layout_weight="1"
                        android:checked="true"
                        app:layout_constraintLeft_toRightOf="@id/highRadioButton"
                        app:layout_constraintRight_toLeftOf="@id/lowRadioButton"/>

                    <RadioButton
                        android:id="@+id/lowRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/filter_lowBtn"
                        android:layout_weight="1"
                        app:layout_constraintLeft_toRightOf="@id/midRadioButton"
                        app:layout_constraintRight_toRightOf="parent"/>

                </RadioGroup>

                <View
                    android:id="@+id/brView6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="#CFCFCF"
                    app:layout_constraintTop_toBottomOf="@+id/conditionRadioGroup"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/explainEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:hint="@string/fRegistration_explanationEditText"
                    android:background="@android:color/transparent"
                    app:layout_constraintTop_toBottomOf="@id/brView6"
                    tools:ignore="MissingConstraints" />

<!--                <TextView-->
<!--                    android:id="@+id/completeTextView"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="49.5dp"-->
<!--                    android:text="@string/actionBar_completeBtn"-->
<!--                    android:textSize="23sp"-->
